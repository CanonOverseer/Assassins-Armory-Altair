<Defs>

  <!-- ############################################################################### -->
  <!-- #                              Altair                                         # -->
  <!-- ############################################################################### -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Levantine_Altair</defName>
    <label>Levantine Assassin's Robes (Master)</label>
    <description>A full-body garment crafted by the Brotherhood, it was created for all Master Assassins, but later become iconic for Altair.</description>
    <graphicData>
      <texPath>Assassins/Assassin</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <techLevel>Medieval</techLevel>
    <costStuffCount>140</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>28000</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>16</Mass>
      <StuffEffectMultiplierArmor>0.52</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>1.7</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>2.7</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>10</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>0.1</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
        <li>FullHead</li>
        <li>Neck</li>
      </bodyPartGroups>
      <wornGraphicPath>Assassins/Assassin</wornGraphicPath>
      <useWornGraphicMask>true</useWornGraphicMask>
      <layers>
        <li>Middle</li>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>AssassinsRim_DoNotSpawn</li>
      </tags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
      <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
    </apparel>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <comps>
      <li Class="AssassinsRim.CompProperties_ApparelWithAttachedHeadgear">
        <attachedHeadgearDef>Levantine_Altair_H</attachedHeadgearDef>
        <toggleUiIconPath>Assassins/Assassin_Hood</toggleUiIconPath>
      </li>
      <li>
				<compClass>AssassinsRim.CompApparelIgnoreStuffColor</compClass>
			</li>
    </comps>
  </ThingDef>

